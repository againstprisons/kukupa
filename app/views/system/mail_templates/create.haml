#system-admin-mailtemplates-index
  %h1= title

  .inline-form
    %a.pure-button.button{href: url('/system/mailtemplates')}
      %i.fa.fa-chevron-left= ""
      = t(:'back')
      
  %form.pure-form.pure-form-stacked.form-main{method: "POST"}
    %h1= t(:'system/mail_templates/create/section_title')
    %input{type: 'hidden', name: '_csrf', value: session[:csrf]}
    
    %label{for: 'name'}= t(:'system/mail_templates/create/template_name')
    %input#name{type: 'text', name: 'name', required: true, placeholder: t(:'system/mail_templates/create/template_name')}
    
    %label{for: 'group'}= t(:'system/mail_templates/create/template_group')
    %select#group{name: 'group', required: true}
      %option{value: '-1', selected: true}= t(:'unknown')
      - groups.each_index do |gi|
        %option{value: gi}&= groups[gi]

    %button.pure-button.button.button-primary{type: 'submit'}
      %i.fa.fa-plus= ""
      = t(:'system/mail_templates/create/submit')
