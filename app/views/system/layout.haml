.system-admin-container
  %ul.system-admin-nav.subpage-nav><
    %li{class: current?('/system')}><
      %a{href: '/system'}
        = t(:'system/index/title')

    - if has_role?('system:config:access')
      %li{class: current_prefix?('/system/config')}><
        %a{href: '/system/config'}
          = t(:'system/config/title')

  = yield
