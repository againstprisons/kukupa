#system-admin-roles-index
  %h1= title

  .inline-form
    %a.pure-button.button{href: url("/system/roles/groups")}
      %i.fa.fa-list= ""
      = t(:'system/roles/groups/title')

  .pure-g
    .pure-u-1.pure-u-md-1-2
      %form.pure-form.pure-form-stacked.form-main.x-margin{method: "GET", action: url('/system/roles/search')}
        %h1= t(:'system/roles/search_by_role/section_title')
        %input{type: 'hidden', name: 'type', value: 'role'}

        %label{for: 'role'}= t(:'role')
        %input#role{name: 'value', type: 'text', required: true, placeholder: t(:'role')}

        %button.pure-button.button{type: 'submit'}
          %i.fa.fa-search= ""
          = t(:'system/roles/search_by_role/submit')

    .pure-u-1.pure-u-md-1-2
      %form.pure-form.pure-form-stacked.form-main.x-margin{method: "GET", action: url('/system/roles/search')}
        %h1= t(:'system/roles/search_by_uid/section_title')
        %input{type: 'hidden', name: 'type', value: 'uid'}

        %label{for: 'userid'}= t(:'system/roles/search_by_uid/field')
        %input.user-search-field#userid{name: 'value', type: 'text', required: true, placeholder: t(:'user_id')}

        %button.pure-button.button{type: 'submit'}
          %i.fa.fa-search= ""
          = t(:'system/roles/search_by_uid/submit')

.async-load{:'data-sources' => JSON.generate(['/static/user_search.bundle.js'])}
