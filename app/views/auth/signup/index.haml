.midsplash-container
  .midsplash.signup-index
    %h1= title

    %form.pure-form.pure-form-stacked.form-main{method: 'POST'}
      %input{type: 'hidden', name: '_csrf', value: session[:csrf]}

      %label{for: 'name'}= t(:'name')
      %input#name{name: 'name', type: 'text', required: true, placeholder: t(:'name')}

      %label{for: 'email'}= t(:'email_address')
      %input#email{name: 'email', type: 'email', required: true, placeholder: t(:'email_address')}

      %label{for: 'password'}= t(:'password')
      %input#password{name: 'password', type: 'password', required: true, placeholder: t(:'password')}

      %label{for: 'password-confirm'}= t(:'password/confirm')
      %input#password-confirm{name: 'password_confirm', type: 'password', required: true, placeholder: t(:'password/confirm')}

      %button.pure-button.button.button-primary{type: 'submit'}
        %i.fa.fa-sign-in= ""
        = t(:'auth/signup/submit')

      %a.pure-button.button.button-secondary{href: url('/auth')}
        %i.fa.fa-chevron-left= ""
        = t(:'auth/signup/return')
