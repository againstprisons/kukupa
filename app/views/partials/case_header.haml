%ul.case-nav.subpage-nav><
  %li{class: current?("/case/#{caseid}/view")}><
    %a{href: url("/case/#{caseid}/view")}
      = t(:'case/nav/view')

  - if show[:timeline]
    %li{class: current_prefix?("/case/#{caseid}/timeline")}><
      %a{href: url("/case/#{caseid}/timeline")}
        = t(:'case/nav/timeline')

  %li{class: current?("/case/#{caseid}/edit")}><
    %a{href: url("/case/#{caseid}/edit")}
      = t(:'case/nav/edit')

  - if show[:correspondence]
    %li{class: current_prefix?("/case/#{caseid}/correspondence/send")}><
      %a{href: url("/case/#{caseid}/correspondence/send")}
        = t(:'case/nav/mail')
