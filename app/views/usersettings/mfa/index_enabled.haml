#usersettings-mfa-index{'data-mfa-enabled': user.totp_enabled}
  %h1= title

  .pure-g
    .pure-u-1.pure-u-md-1-2
      .form-main.x-margin
        %h1= t(:'usersettings/mfa/enabled/totp/section_title')
        %p= t(:'usersettings/mfa/enabled/totp/content')

        %a.pure-button.button{href: url('/user/mfa/totp')}
          %i.fa.fa-mobile= ""
          = t(:'usersettings/mfa/enabled/totp/submit')

    .pure-u-1.pure-u-md-1-2
      .form-main.x-margin
        %h1= t(:'usersettings/mfa/enabled/recovery/section_title')

        - unless mfa[:has_recovery]
          .message.message-warning
            = t(:'usersettings/mfa/enabled/recovery/no_recovery')

        %p= t(:'usersettings/mfa/enabled/recovery/content')

        %a.pure-button.button{href: url('/user/mfa/recovery')}
          %i.fa.fa-file-text-o= ""
          = t(:'usersettings/mfa/enabled/recovery/submit')

  .form-main.x-margin
    %h1= t(:'usersettings/mfa/enabled/disable/section_title')

    - if mfa[:has_roles]
      %p= t(:'usersettings/mfa/enabled/disable/has_roles')

    - else
      %p= t(:'usersettings/mfa/enabled/disable/content')

      %a.pure-button.button{href: url('/user/mfa/disable')}
        %i.fa.fa-times= ""
        = t(:'usersettings/mfa/enabled/disable/submit')
