%meta{charset: "utf-8"}
%meta{name: "viewport", content: "width=device-width,initial-scale=1"}
%title= [(defined?(title) && !title.nil?) ? "#{title} &laquo; " : nil, site_name].compact.join('')
%style
  *, *:before, *:after { box-sizing: border-box; }
  html { font-family: sans-serif; margin: 0; padding: 0; }
  a { color: inherit; text-decoration: underline; }
  a:hover, a:focus { text-decoration: none; }
  h1, h2, h3, h4, h5, h6 { padding: 0; margin: 0.5em auto 0 auto; }
  \.footer { margin: 1em 0; border-top: 2px solid #000; }
  @media screen { body { padding: 1em; } }

%script{type: 'text/javascript'}
  window.addEventListener('load', function(e) { window.print() })
